# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset to UTF-8
charset = utf-8

# Tab indentation (2 spaces)
[*.py]
indent_style = space
indent_size = 2

# JavaScript files should use spaces, not tabs
[*.js]
indent_style = space
indent_size = 2

# Indentation for HTML, XML, and similar files
[*.html, *.xml]
indent_style = space
indent_size = 2
